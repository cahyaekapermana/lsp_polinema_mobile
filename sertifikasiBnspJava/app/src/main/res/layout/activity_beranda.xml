<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    tools:context=".BerandaActivity">

    <TextView
        android:id="@+id/rangkuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Rangkuman Buku ini"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rangkuman"
        android:id="@+id/line1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        >

        <TextView
            android:id="@+id/pengeluaran"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="pengeluaran :"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pengeluaranid"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="angka"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:id="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        >

        <TextView
            android:id="@+id/pemasukan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="pemasukan :"
            android:textColor="#4CAF50"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pemasukanid"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="angka"
            android:textColor="#4CAF50"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tambahpemasukan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="TODO"
            android:src="@drawable/coin"
            app:srcCompat="@drawable/img_453145" />


        <ImageView
            android:id="@+id/tambahpengeluaran"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="76dp"
            android:contentDescription="TODO"
            android:src="@drawable/income"
            app:srcCompat="@drawable/uangkeluar" />
    </LinearLayout>

    <TextView
        android:id="@+id/halaman_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Tambah pemasukan"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/halaman_bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="tambahkan pengeluaran"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailcash"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="TODO"
            android:src="@drawable/search"
            app:srcCompat="@drawable/detailicon" />


        <ImageView
            android:id="@+id/pengaturan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:contentDescription="TODO"
            android:src="@drawable/gear"
            app:srcCompat="@drawable/settingicon" />
    </LinearLayout>

    <TextView
        android:id="@+id/cashflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Detail CashFlow"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/pengaturan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Pengaturan"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>